---
import { Icon } from 'astro-icon/components';
import MainLayout from '~/layouts/MainLayout.astro';
import PressAssetCard from './_components/PressAssetCard.astro';

const seo = {
	title: 'Press',
	description: 'Download Astro logos and other assets for media and press usage.',
};

const socialLinks = [
	{
		text: 'press@astro.build',
		icon: 'email',
		href: 'mailto:press@astro.build',
	},
	'separator',
	{
		text: 'Bluesky',
		icon: 'social/bluesky',
		href: 'https://astro.build/on/bluesky',
	},
	{
		text: 'Discord',
		icon: 'social/discord',
		href: 'https://astro.build/chat',
	},
	{
		text: 'GitHub',
		icon: 'social/github',
		href: 'https://astro.build/on/github',
	},
	{
		text: 'Mastodon',
		icon: 'social/mastodon',
		href: 'https://astro.build/on/mastodon',
	},
	{
		text: 'X/Twitter',
		icon: 'social/twitter',
		href: 'https://astro.build/on/twitter',
	},
	{
		text: 'YouTube',
		icon: 'social/youtube',
		href: 'https://www.youtube.com/@astrodotbuild',
	},
] satisfies Array<{ text: string; icon: string; href: string } | 'separator'>;
---

<MainLayout {...seo}>
	<div class="relative overflow-hidden">
		<div class="grid-container relative py-12 sm:py-14 md:py-16 xl:py-20">
			<div class="bleed-full bg-grid absolute inset-0 mask-linear-gradient-to-b"></div>
			<div class="relative flex flex-col items-center gap-6 text-center">
				<h1 class="heading-2 mx-auto max-w-screen-lg md:heading-1">Press Resources</h1>
				<p class="body text-astro-gray-200 md:body-large">Brand resources for all things Falak</p>
			</div>
		</div>

		<div class="grid-container overflow-hidden border-t border-astro-gray-500 pt-16">
			<section class="space-y-14" aria-labelledby="assets">
				<h2 class="heading-3" id="assets">Brand Assets</h2>
				<ul class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
					<PressAssetCard
						name="Logo on light"
						instructions="Please use this logo in most circumstances on light backgrounds."
						background="light"
						assetName="black"
					/>
					<PressAssetCard
						name="Gradient logo on dark"
						instructions="Please use this logo in most circumstances on dark backgrounds."
						background="dark"
						assetName="gradient"
					/>
					<PressAssetCard
						name="Logo on dark"
						instructions="Please only use this logo on dark backgrounds if a monochrome logo is essential."
						background="dark"
						assetName="white"
					/>
					<PressAssetCard
						name="Logomark on light"
						instructions="Please only use the logomark for very small representations of Astro and in illustrations with written consent by Astro."
						background="light"
						assetName="blackicon"
					/>
					<PressAssetCard
						name="Gradient logomark on dark"
						instructions="Please only use the logomark for very small representations of Astro and in illustrations with written consent by Astro."
						background="dark"
						assetName="gradienticon"
					/>
					<PressAssetCard
						name="Logomark on dark"
						instructions="Please only use the logomark for very small representations of Astro and in illustrations with written consent by Astro."
						background="dark"
						assetName="whiteicon"
					/>
				</ul>
				<div class="flex justify-center">
					<a href="/assets/press/falak-logos.zip" download class="button button-primary">
						Download all <Icon name="download" aria-hidden="true" class="s-6" />
					</a>
				</div>
			</section>

			<section aria-labelledby="guidelines" class="flex flex-col gap-14">
				<h2 class="heading-3" id="guidelines">Guidelines</h2>

				<div class="flex flex-col gap-24">
					<div class="flex flex-col gap-14 md:flex-row">
						<div class="flex flex-col gap-4 grow">
							<h3 class="heading-4">How to use the Falak logo</h3>
							<ul class="flex flex-col gap-4 text-astro-gray-200">
								{
									[
										'Use our logo to link to Falak’s website or GitHub repository',
										'Use our logo in a blog post or video about Falak',
									].map((rule) => (
										<li class="flex gap-x-2.5">
											<Icon name="approval-check" class="s-6 shrink-0 text-astro-green" /> {rule}
										</li>
									))
								}
							</ul>
						</div>
						<div class="flex flex-col gap-4 grow">
							<h3 class="heading-4">Things to avoid</h3>
							<ul class="flex flex-col gap-4 text-astro-gray-200">
								{
									[
										'Don’t use the Falak logo for your app or website’s icon',
										'Don’t include the Falak logo in your own logo',
										'Don’t modify the Falak logo or change its colors',
										'Don’t sell products featuring the Falak logo without permission',
									].map((rule) => (
										<li class="flex gap-x-2.5">
											<Icon name="x-close-cancel" class="s-6 shrink-0 text-astro-red" /> {rule}
										</li>
									))
								}
							</ul>
						</div>
					</div>

					<div class="flex flex-col gap-5">
						<h3 class="heading-4">Logo history</h3>
						<div class="flex flex-col gap-12 md:flex-row md:gap-16">
							<div class="text-astro-gray-200 flex flex-col gap-4 shrink-0 md:max-w-80">
								<p>We refreshed our logo in 2023. Make sure you’re using the latest version!</p>
								<p>
									<a href="/blog/welcome-world/" class="link font-normal underline">
										Read more about our redesign
									</a>
								</p>
							</div>
							{/* Old/new logo comparison */}
							<div
								aria-hidden="true"
								class="flex flex-wrap gap-y-12 justify-center w-full md:max-w-xl"
							>
								<div class="flex flex-col gap-6 items-center px-12">
									
